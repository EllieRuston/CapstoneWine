@page
@model ResendEmailConfirmationModel

@{
    ViewData["Title"] = "Resend email confirmation";
}

<div>
    <div class="background">
        <div class="shape"></div>
        <div class="shape"></div>
    </div>
	<div class="background">
		<form method="post">
            <div class="btn-outline-light btn backbtn">
                <a href="javascript:history.back()"><</a>
            </div>

		<h3>Resend email confirmation</h3>
		<hr />
			<div>
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
            <div>
                <label asp-for="Input.Email" class="label"></label>
                <input asp-for="Input.Email" class="input" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div style="margin-top: 50px">
                <button type="submit" class="w-100 btn btn-lg btn-outline-light">Resend</button>
			</div>
			</div>
            
	</form>
	</div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
