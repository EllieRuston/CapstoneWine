@page
@model RegisterModel

@{
	ViewData["Title"] = "Register";
}


<div>
<div class="background">
	<div class="shape"></div>
	<div class="shape"></div>
	</div>
<div class="background">
	
		<form class="user_form bk_blur"id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
			<div class="btn-outline-light btn backbtn" onclick="javascript:history.back()">
				<a><</a>
			</div>
			<h3>Sign Up</h3>
			<hr />
			<div>
			<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
				<label class="label" asp-for="Input.Email">Email</label>
				<input asp-for="Input.Email" class="input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
				<span asp-validation-for="Input.Email" class="text-danger"></span>

				<label class="label" asp-for="Input.Password">Password</label>
				<input asp-for="Input.Password" class="input" autocomplete="new-password" aria-required="true" placeholder="password" />
				<span asp-validation-for="Input.Password" class="text-danger"></span>

				<label class="label" asp-for="Input.ConfirmPassword">Confirm Password</label>
				<input asp-for="Input.ConfirmPassword" class="input" autocomplete="new-password" aria-required="true" placeholder="password" />
			   <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
			</div>
			<div style="margin:25px 0">
				<button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-outline-light">Register</button>
			</div>
			</form>
	
