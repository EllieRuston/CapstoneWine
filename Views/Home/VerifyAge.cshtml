<style>
	.base{
		position: relative;
		width: 100%;
		height: 100vh;
	}
	.gif-container{
		position:absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		overflow:hidden;
	}

	#ageVideo{
		opacity:0.7;
		display:none;
		position: absolute;
		top:50%;
		left:50%;
		transform:translate(-50%, -50%);
		min-width: 100%;
		min-height: 100%;
		object-fit:cover;
	}

	.text-container{
		position:relative;
		z-index:1;
		text-align:center;
	}

</style>

<div class="container">
@{
	ViewData["Title"] = "Age Check";
}
<div class="login_layout">
	<div class="base">
		<div class = "gif-container">
			<video id="ageVideo" loop muted>
				<source src="~/video/agevideo.mp4" type="video/mp4"/>
			</video>
		</div>
	
		<div class="text-container">
				<h1 class="boldTitle" id="ageCheckTitle">@ViewData["Title"]</h1>
				<h3 class="divaText">Confirm you are 18+ to proceed.</h3>
		</div>
		<div class="background">
			<form onmouseover="playGif()" onmouseout="stopGif()" class="bk_blur" style="width:30vw; margin-top:30px" method="post" asp-action="VerifyAge">
			<label class="label" style="margin-bottom:30px ;margin-top:0" formaction="dateOfBirth">Enter Your Date of Birth</label>
			<input class="input"  type="date" id="dateOfBirth" name="dateOfBirth" required>
			<button class=" w-100 btn btn-md btn-outline-light" style="margin-top:35px" type="submit">Submit</button>
				</form>
		</div>
	</div>

</div>
</div>

<script>
	function playGif() {
		var video = document.getElementById('ageVideo');
		video.style.display = 'block';
		video.play();
	}

	function stopGif() {
		var video = document.getElementById('ageVideo');
		video.pause();
		video.currentTime = 0;
		video.style.display='none';
	}
</script>
