@model IEnumerable<CapstoneWine.Models.OrdersModel>
<link rel="stylesheet" href="~/css/admin.css" />

@{
    ViewData["Title"] = "Orders";
}

<section class="top-sect">
    <a class="table-title">Orders</a>
    <a class="table-title inactive" asp-controller="Subscriptions" asp-action="Index">Subscriptions</a>
    <a class="table-title inactive" asp-controller="Wines" asp-action="Index">Wines</a>
    <a class="table-title inactive" asp-controller="Customer" asp-action="Index">Customers</a>
</section>

<h1>Orders</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table style="width: 100%;">
    <thead>
        <tr>
            <th data-cell="order date">
                Order Date
            </th>
            <th data-cell="customer ID">
                Customer ID
            </th>
            <th data-cell="wine ID">
                Wine ID
            </th>
            <th data-cell="quantity">
                Quantity
            </th>
            <th data-cell="delivery address">
                Delivery Address
            </th>
            <th data-cell="delivery charge">
                Delivery Charge
            </th>
            <th data-cell="total cost">
                Total Cost
            </th>
            <th data-cell="order status">
                Order Status
            </th>
            <th data-cell="reward points">
                Reward Points
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td data-cell="order date">
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td data-cell="customer ID">
                @Html.DisplayFor(modelItem => item.CustomerId)
            </td>
            <td data-cell="wine ID">
                @Html.DisplayFor(modelItem => item.wine.WineID)
            </td>
            <td data-cell="quantity">
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td data-cell="delivery address">
                @Html.DisplayFor(modelItem => item.DeliveryAdd)
            </td>
            <td data-cell="delivery charge">
                @Html.DisplayFor(modelItem => item.DeliveryCharge)
            </td>
            <td data-cell="total cost">
                @Html.DisplayFor(modelItem => item.TotalCost)
            </td>
            <td data-cell="order status">
                @Html.DisplayFor(modelItem => item.OrderStatus)
            </td>
            <td data-cell="reward points">
                @Html.DisplayFor(modelItem => item.RewardPoints)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrderID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OrderID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OrderID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
