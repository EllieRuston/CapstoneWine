@model IEnumerable<CapstoneWine.Models.OrdersModel>

<link rel="stylesheet" href="~/css/admin.css"/>

@{
    ViewData["Title"] = "Orders";
}

<section class="top-sect">
    <a class="table-title">Orders</a>
    <a class="table-title inactive" asp-controller="Subscriptions" asp-action="Index">Subscriptions</a>
    <a class="table-title inactive" asp-controller="Wines" asp-action="Index">Wines</a>
</section>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table style="width: 100%;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.wine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.subscription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryAdd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryCharge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RewardPoints)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.wine.WineID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.subscription.SubID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryAdd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryCharge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RewardPoints)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrderID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OrderID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OrderID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
